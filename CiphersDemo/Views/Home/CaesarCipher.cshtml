@model CaesarCipherViewModel
@{
    ViewData["Title"] = "Caesar Cipher";
}

<h1>Caesar Cipher</h1>

<form asp-controller="Home" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="InputText" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="InputText" class="form-control">
            <span asp-validation-for="InputText" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Shift" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Shift" class="form-control">
            <span asp-validation-for="Shift" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <button asp-action="CaesarCipherEncrypt" type="submit" class="btn btn-danger">Encrypt</button>
        <button asp-action="CaesarCipherDecrypt" type="submit" class="btn btn-success">Decrypt</button>
    </div>
    <div class="form-group row">
        <label asp-for="OutputText" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="OutputText" class="form-control">
        </div>
    </div>
</form>
